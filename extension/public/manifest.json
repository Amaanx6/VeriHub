{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "VeriHub",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "veri.png",
    "32": "veri.png",
    "48": "veri.png",
    "128": "veri.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
   "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "webNavigation",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["highlight-manager.js", "content.js"],
      "run_at": "document_end"
    }
  ]
}